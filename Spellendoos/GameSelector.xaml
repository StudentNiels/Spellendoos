<Window x:Class="Spellendoos.GameSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spellendoos"
        mc:Ignorable="d"
        Title="GameSelector" Height="450" Width="800">
    <Grid>
        <Image Source="Menu.jpg" Stretch="Fill"/>
        <Button x:Name="options_Btn" Content="Options" HorizontalAlignment="Left" Margin="55,175,0,0" VerticalAlignment="Top" Width="118" Height="25" Click="options_Btn_Click"/>
        <Button x:Name="quit_Btn" Content="Quit Game" HorizontalAlignment="Left" Margin="55,220,0,0" VerticalAlignment="Top" Width="118" Height="25" Click="quit_Btn_Click"/>
        <Button x:Name="start_Yahtzee" Content="Start Yahtzee" Width="118" Height="25" Click="start_Yahtzee_Click" Margin="327,142,348.6,253"/>
    </Grid>
</Window>
